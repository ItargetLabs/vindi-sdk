{
  "name": "devsitarget/sdk-vindi-php",
  "description": "SDK PHP para integração com Vindi (Bills, Pix, Cartão, Boleto)",
  "type": "library",
  "version": "1.0.0",
  "license": "MIT",
  "require": {
    "php": ">=8.1",
    "guzzlehttp/guzzle": "^7.5",
    "psr/http-client": "^1.0",
    "psr/http-message": "^1.0 || ^2.0",
    "psr/log": "^1.0 || ^2.0 || ^3.0",
    "chillerlan/php-qrcode": "^4.3"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "phpstan/phpstan": "^1.10",
    "squizlabs/php_codesniffer": "^3.7"
  },
  "autoload": {
    "psr-4": {
      "VindiSdk\\": "src/Vindi/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "VindiSdk\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit --configuration phpunit.xml",
    "phpstan": "phpstan analyse --configuration phpstan.neon",
    "cs-check": "phpcs --standard=PSR12 src tests",
    "cs-fix": "phpcbf --standard=PSR12 src tests"
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
